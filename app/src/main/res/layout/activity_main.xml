<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gatesRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/buttons"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:visibility="visible"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true">

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/creationPortalActivityButton"
                android:text="Creation Portal"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showPortalButton"
                android:text="Show Portal"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settingsButton"
                android:text="Settings"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signOutButton"
                android:text="Sign Out"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newUIButton"
                android:text="New UI"/>

        <TextView android:id="@+id/userDetails"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
